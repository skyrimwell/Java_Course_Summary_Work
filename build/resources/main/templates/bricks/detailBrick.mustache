{{>layout/header}}
{{>layout/nav}}
<script src="/js/app/detailBrick.js"></script>

{{#brickInfo}}
    {{#master}}
        <div class="d-flex justify-content-end col-md-11">
            <button type="button" id="btn-bricksDelete" class="btn btn-lg btn-secondary">
                Удалить</button>
        </div>
    {{/master}}
    {{^master}}
    {{/master}}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-8 blog-main">
                <h3 class="pb-3 mb-4 border-bottom">Подробности заказа</h3>
                <div class="blog-post">
                    <h2 class="blog-post-title">{{brickType}}</h2>
                    <div class="ml-1 row d-flex justify-content-between">
                        <p class="blog-post-meta"><strong>
                            Тип</strong> : {{brickType}}</p>
                        <p class="blog-post-meta"><strong>
                            Размер</strong> : {{brickSize}}</p>
                    </div>

                    <div class="d-flex justify-content-end">
                        <h4 id="brick_Price">{{brickPrice}}</h4><h3>р</h3>
                    </div>
                    <hr>

                </div>
            </div>
            <aside class="col-md-4 blog-sidebar">
                <div class="p-3 mb-3 rounded">
                    <h4 class="mb-2">Заказать</h4>
                    <hr>
                    <form>
                        <div class="mb-2 row d-flex justify-content-end">
                            <input type="number" id="count" value="1" min="1" max="{{brickCount}}"/>
                            <h4>р</h4>
                        </div>
                        <div id="total" class="row d-flex flex-row-reverse">
                            <h4>р</h4>
                        </div>
                    </form>
                    {{#existSession}}
                        <div class="btn-group-lg-vertical">
                            <button class="btn btn-outline-secondary btn-lg btn-block" disabled id="btn-addCart">Добавить в корзину</button>
                            <button class="btn btn-outline-secondary btn-lg btn-block" disabled>Добавить в корзину</button>
                        </div>
                    {{/existSession}}
                    {{^existSession}}
                        <div class="btn-group-lg-vertical">
                            <button class="btn btn-outline-secondary btn-lg btn-block" id="btn-addCart">Добавить в корзину</button>
                            <button class="btn btn-outline-secondary btn-lg btn-block" onclick=orderBtn()>Заказ</button>
                        </div>
                    {{/existSession}}
                </div>
            </aside>
        </div>
{{/brickInfo}}
</main>
{{>layout/footer}}